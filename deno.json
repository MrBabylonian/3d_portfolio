{
    "tasks": {
      "start": "deno run --allow-env --allow-net --allow-read server.ts",
      "dev": "deno run --allow-env --allow-net --allow-read --watch server.ts"
    },
    "imports": {
      "oak": "https://deno.land/x/oak@v12.6.1/mod.ts"
    },
    "compilerOptions": {
      "allowJs": true,
      "lib": ["deno.window"],
      "strict": true
    },
    "lint": {
      "include": ["server.ts"],
      "rules": {
        "tags": ["recommended"]
      }
    },
    "fmt": {
      "include": ["server.ts"],
      "lineWidth": 100,
      "indentWidth": 2,
      "singleQuote": false
    }
  }